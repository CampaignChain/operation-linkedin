{% block campaignchain_operation_linkedin_share_news_item_widget %}
    {% spaceless %}
        {% stylesheets '@campaignchain_operation_linkedin_css' %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet" />
        {% endstylesheets %}
        <div id="campaignchain-operation-linkedin-share-news-item">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class='campaignchain-medium-icon'>
                        <img class='icon' src='{{ asset( form.vars.location|campaignchain_medium_icon ) }}'/>
                        <img class='context-icon' src='{{ asset( form.vars.location|campaignchain_medium_context ) }}' style='background-image: url("{{ asset( form.vars.location|campaignchain_medium_context ) }}");'/>
                        <span class="text"><a href="{{ form.vars.location.getUrl() }}" target="_blank">{{ form.vars.location.getName() }}</a></span>
                    </div>
                </div>
                <div class="panel-body">
                {{ form_row(form.message, { 'widget_col': 12}) }}
                {{ form_row(form.submitUrl, { 'label_col': 3, 'widget_col': 9}) }}
                {{ form_row(form.linkTitle, { 'label_col': 3, 'widget_col': 9}) }}
                {{ form_row(form.description, { 'label_col': 3, 'widget_col': 9}) }}
                </div>
            </div>
        </div>
    {% endspaceless %}
{% endblock %}